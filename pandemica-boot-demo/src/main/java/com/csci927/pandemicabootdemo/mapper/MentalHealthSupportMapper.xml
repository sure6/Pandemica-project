<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csci927.pandemicabootdemo.mapper.MentalHealthSupportMapper">

    <resultMap id="BaseResultMap" type="com.csci927.pandemicabootdemo.bean.MentalHealthSupport">
        <id column="userID" property="userID" />
        <result column="serviceType" property="serviceType" />
        <result column="reason" property="reason" />
    </resultMap>

    <sql id="Base_Column_List">
        userID, serviceType, reason
    </sql>

    <select id="selectByUserID" resultType="com.csci927.pandemicabootdemo.bean.MentalHealthSupport" parameterType="java.lang.String">
        select <include refid="Base_Column_List"/> from mentalHealthSupport where userID = #{userID};
    </select>

    <insert id="insertMHS" parameterType="com.csci927.pandemicabootdemo.bean.MentalHealthSupport">
        insert into mentalHealthSupport(<include refid="Base_Column_List"/>) values(#{userID}, #{serviceType}, #{reason});
    </insert>


    <select id="selectByUserIDAndServiceType"  resultType="com.csci927.pandemicabootdemo.bean.MentalHealthSupport" parameterType="java.lang.String">
        select <include refid="Base_Column_List"/> from mentalHealthSupport where userID = #{userID} and serviceType = #{serviceType};
    </select>
</mapper>
