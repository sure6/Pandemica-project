<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!--    1. Specifying the current service -->
    <dubbo:application name="pandemica-provider"/>
    <!--    2. Specifying registry center  -->
    <dubbo:registry protocol="zookeeper" address="127.0.0.1:2181"/>
    <!--    3. Specifying communication rules-->
    <dubbo:protocol name="dubbo" port="20882"/>
    <!--    4. Exposing service and ref points to the actual implementation object of the service -->
    <dubbo:service interface="com.csci927.pandemicaapi.service.UserService" ref="userServiceImpl"/>
    <!--    5.Service Implementation -->
    <bean id="userServiceImpl" class="com.csci927.pandemicaprovider.service.impl.UserServiceImpl"/>
</beans>