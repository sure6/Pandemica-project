<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <!--  scan package for service implentment  -->
    <context:component-scan base-package="com.csci927.pandemicaconsumer.service.impl"/>
    <!--  specifying current service consumer  -->
    <dubbo:application name="pandemica-consumer"/>
    <!--  specifying service registry center  -->
    <dubbo:registry protocol="zookeeper" address="127.0.0.1:2181"/>
    <!--  Declare the remote service interface that needs to be invoked and generate the remote service proxy-->
    <dubbo:reference interface="com.csci927.pandemicaapi.service.UserService" id="userService"/>
</beans>